<?xml version="1.0" encoding="UTF-8"?>
<settings>
  <type>column</type>
  <data_type>xml</data_type>
  <depth>10</depth>
  <angle>45</angle>
  <colors></colors>
  <column>
    <type>3d column</type>
    <width>50</width>
    <spacing>0</spacing>
    <grow_time>1</grow_time>
    <alpha>60</alpha>
    <data_labels>
      <![CDATA[<b>{value}</b>]]>
    </data_labels>

    <balloon_text>
        <![CDATA[{title}:数值:{value};总数值:{total};百分比:{percents}%]]>
    </balloon_text>
  </column>
  <axes>
    <category>
      <width>1</width>
    </category>
    <value>
      <width>1</width>
    </value>
  </axes>

  <balloon>
    <alpha>80</alpha>
    <text_color>#000000</text_color>
    <corner_radius>5</corner_radius>
    <border_width>3</border_width>
    <border_alpha>60</border_alpha>
    <border_color>#000000</border_color>
  </balloon>

  <legend>
    <width>400</width>
    <spacing>5</spacing>
  </legend>

  <export_as_image>
    <file>../chart/export.php</file>
    <alpha>100</alpha>
  </export_as_image>

  <context_menu>
     <default_items>
       <zoom>true</zoom>
       <print>true</print>
     </default_items>
  </context_menu>
</settings>
